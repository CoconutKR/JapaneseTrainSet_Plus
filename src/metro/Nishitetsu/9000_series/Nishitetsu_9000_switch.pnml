switch(FEAT_TRAINS, SELF, sw_Nishitetsu_9000_3Car_engine, position_in_consist_from_end == 0 && num_vehs_in_consist > 1){
    1: set_Nishitetsu_9000_3car_engineT;
    set_Nishitetsu_9000_3car_engineH;
}

switch(FEAT_TRAINS, SELF, sw_Nishitetsu_9000_2Car_engine, position_in_consist_from_end == 0 && num_vehs_in_consist > 1){
    1: set_Nishitetsu_9000_2car_engineT;
    set_Nishitetsu_9000_2car_engineH;
}

switch(FEAT_TRAINS, SELF, sw_Nishitetsu_9000_6car_engine, (position_in_consist) % 6) {
    1: set_Nishitetsu_9000_3car_engineH;
    3: set_Nishitetsu_9000_3car_engineT;
    4: set_Nishitetsu_9000_3car_engineH;
    6: set_Nishitetsu_9000_3car_engineT;
    sw_Nishitetsu_9000_3Car_engine;
}

switch(FEAT_TRAINS, SELF, sw_Nishitetsu_9000_engine, num_vehs_in_consist) {
    2: sw_Nishitetsu_9000_2Car_engine;
    3: sw_Nishitetsu_9000_3Car_engine;
    6: sw_Nishitetsu_9000_6car_engine;
    sw_Nishitetsu_9000_2Car_engine;
}

switch(FEAT_TRAINS, SELF, sw_Nishitetsu_9000_wagon_attach, vehicle_type_id) {
    JTS_Passenger_Car:   return CB_RESULT_ATTACH_ALLOW;
    Nishitetsu_9000:     return CB_RESULT_ATTACH_ALLOW;
}